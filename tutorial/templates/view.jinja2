{% extends "layout.jinja2" %}

{% block title %}{{ page.__name__ }}{% endblock %}

{% block left %}
          Viewing <b><span>{{ page.__name__ }}</span></b><br/>
          You can return to the
          <a href="{{ request.application_url }}">FrontPage</a>.<br/>
{% endblock %}

{% block right %}
          {% if logged_in %}
            <a href="{{ request.application_url }}/logout">Logout</a>
          {% endif %}
{% endblock %}

{% block bottom %}
        <div>
            {{ content|safe }}
        </div>
        <p>
        <a href="{{ edit_url }}">
            Edit this page
          </a>
        </p>
{% endblock %}

